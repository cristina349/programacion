#include <iostream>
using namespace std;
int main (){
   
    //promedio
    int n1=7, n2=2, n3=8;
    float promedio;
    //sumamos todos los elementos y dividimos esa suma  por la cantidad de elementos que usamos
    promedio =((float)n1+n2+n3)/3;
