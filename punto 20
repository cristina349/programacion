/*
Hacer un programa en el que se ingrese la edad y altura de 5 personas. Luego,
calcular e informar:
- La cantidad de personas mayores a 30 años que midan más de 1.8
metros.
- El promedio de altura de las personas mayores a 30 años.
- La cantidad de personas con altura entre 1.7 y 1.8 (ambos inclusive)
- La cantidad de personas cuya edad sea de 20, 30 o 40 años
*/

#include <iostream>
using namespace std;

int main(){
    int edad;
    float altura;
    int personas1 = 0, personas2 = 0, personas3 = 0;  
    int cantMayores30 = 0;       // para el promedio
    float sumaAlturasMayores30 = 0;

    //para que no se pierdad le puedo que decir que for es un repetidor en bluques
    // y que se ba a repite 5 veces
    for (int i=1; i<=5; i++){
        cout << "Ingrese edad y altura de la persona " << endl;
        cin >> edad >> altura;

        
        if(altura >= 1.7 && altura <= 1.8){
            personas1 = personas1 + 1;
        } 

   
        if(edad > 30 && altura > 1.8){
            personas2 = personas2 + 1;
        }

        // promedio de altura de mayores de 30
        if(edad > 30){
            cantMayores30++;
            sumaAlturasMayores30 += altura;
        }

 
        if (edad == 20 || edad == 30 || edad == 40){
            personas3 = personas3 + 1;
        }
    }

    cout << "La cantidad de personas con altura entre 1.7 y 1.8 es: " << personas1 << endl;
    cout << "La cantidad de personas mayores a 30 años que midan más de 1.8 metros es: " << personas2 << endl;
    cout << "La cantidad de personas cuya edad sea de 20, 30 o 40 años es: " << personas3 << endl;

    if(cantMayores30 > 0){
        cout << "El promedio de altura de las personas mayores a 30 es: " 
             << (sumaAlturasMayores30 / cantMayores30) << endl;
    } else {
        cout << "No hay personas mayores a 30 para calcular el promedio." << endl;
    }

  
}
