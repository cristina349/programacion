/*
Una marroquinería dispone de 45 carteras blancas, 50 carteras negras, 40
marrones y 49 grises. Se pide hacer un programa donde se ingresen tres
ventas. Cada venta está compuesta por:
- Cantidad de carteras
- Tipo de cartera (1 - Blanco, 2 - Negro, 3- Marrón, 4 - Gris)
Calcular e informar:
- Cantidad total de carteras vendidas en total.
- Cuántas carteras quedaron de cada tipo.
- Los colores de carteras que no se vendieron.
NOTA: Ninguna venta superará las 10 carteras.
*/


#include <iostream>
using namespace std;

int main() {
    int blancas = 45, negras = 50, marrones = 40, grises = 49;
    int cantidad, tipo;
    int total = 0;

    for(int i = 1; i <= 3; i++) {
        cout << "Ingrese la cantidad de carteras vendidas: ";
        cin >> cantidad;
        cout << "Ingrese el tipo de cartera (1=Blanco, 2=Negro, 3=Marron, 4=Gris): ";
        cin >> tipo;

        total = total + cantidad; 

        if(tipo == 1){
            blancas = blancas - cantidad;
        } else if(tipo == 2){
            negras = negras - cantidad;
        } else if(tipo == 3){
            marrones = marrones - cantidad;
        } else if(tipo == 4){
            grises = grises - cantidad;
        }
    }

    cout << "La cantidad total de carteras vendidas es: " << total << endl;
    cout << "Quedaron " << blancas << " blancas." << endl;
    cout << "Quedaron " << negras << " negras." << endl;
    cout << "Quedaron " << marrones << " marrones." << endl;
    cout << "Quedaron " << grises << " grises." << endl;

  
    if(blancas == 45){cout << "No se vendieron carteras blancas." << endl;}
    if(negras == 50){cout << "No se vendieron carteras negras." << endl;}
    if(marrones == 40){ cout << "No se vendieron carteras marrones." << endl;}
    if(grises == 49){ cout << "No se vendieron carteras grises." << endl;}

}

